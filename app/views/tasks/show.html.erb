<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<div>
<%= link_to 'Back to the list', tasks_path %>
</div>

<div>
  <%= link_to 'Edit task', edit_task_path(@task) %>
</div>

<div>
  <%= link_to 'Delete task',
              task_path(@task),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</div>
